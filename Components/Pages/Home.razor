@page "/"
@rendermode InteractiveServer

@using Microsoft.AspNetCore.Components.Authorization

<PageTitle>Home</PageTitle>

<div class="app-card p-4" style="max-width: 720px;">
    <h1 class="mb-2">Schedules and days off, made simple.</h1>
    <p class="text-muted mb-4">Employees can choose a schedule and instantly see work days, days off, and pay impacts.</p>

    <ul class="mb-4">
        <li><strong>Easy schedule selection</strong> for employees (start date, shift, pattern)</li>
        <li><strong>Always up-to-date payroll view</strong> including <strong>shift differentials</strong></li>
        <li><strong>Clear calendar preview</strong> of work days vs days off</li>
    </ul>

    <a class="btn btn-primary" href="schedule">Start schedule</a>

    <AuthorizeView>
        <NotAuthorized>
            <div class="mt-3 text-muted small">
                Want to save your schedule? <a href="login">Log in</a>.
            </div>
        </NotAuthorized>
    </AuthorizeView>
</div>
