@page "/login"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.WebUtilities
@inject NavigationManager Nav

<PageTitle>Login</PageTitle>

<div class="app-card p-4" style="max-width: 480px;">
    <h3 class="mb-3">Login</h3>

    <form method="post" action="@(_mode == Mode.Login ? "/auth/login" : "/auth/register")">
        <input type="hidden" name="returnUrl" value="@_returnUrl" />

        <div class="mb-3">
            <label class="form-label">Email</label>
            <input class="form-control" name="email" type="email" autocomplete="username" required @bind="_model.Email" />
        </div>

        <div class="mb-3">
            <label class="form-label">Password</label>
            <input class="form-control" name="password" type="password" autocomplete="current-password" minlength="6" required @bind="_model.Password" />
        </div>

        @if (!string.IsNullOrWhiteSpace(_error))
        {
            <div class="text-danger mb-3">@_error</div>
        }

        <div class="d-flex gap-2">
            <button class="btn btn-primary" type="submit">
                @(_mode == Mode.Login ? "Login" : "Register")
            </button>
            <button class="btn btn-outline-secondary" type="button" @onclick="ToggleMode">
                @(_mode == Mode.Login ? "Need an account?" : "Already have an account?")
            </button>
        </div>
    </form>
</div>

@code {
    private readonly Model _model = new();
    private Mode _mode = Mode.Login;
    private string? _error;
    private string _returnUrl = "/schedule";

    protected override void OnInitialized()
    {
        var uri = Nav.ToAbsoluteUri(Nav.Uri);
        var query = QueryHelpers.ParseQuery(uri.Query);

        if (query.TryGetValue("mode", out var modeRaw) &&
            modeRaw.ToString().Equals("register", StringComparison.OrdinalIgnoreCase))
        {
            _mode = Mode.Register;
        }

        if (query.TryGetValue("error", out var errorRaw))
        {
            _error = errorRaw.ToString();
        }

        if (query.TryGetValue("returnUrl", out var returnUrlRaw))
        {
            var candidate = returnUrlRaw.ToString();
            _returnUrl = IsLocalUrl(candidate) ? candidate : "/schedule";
        }
    }

    private void ToggleMode()
    {
        _mode = _mode == Mode.Login ? Mode.Register : Mode.Login;
        _error = null;
    }

    private enum Mode
    {
        Login,
        Register
    }

    private sealed class Model
    {
        public string Email { get; set; } = string.Empty;

        public string Password { get; set; } = string.Empty;
    }

    private static bool IsLocalUrl(string? url)
        => !string.IsNullOrWhiteSpace(url) && url.StartsWith('/') && !url.StartsWith("//") && !url.StartsWith("/\\");
}
